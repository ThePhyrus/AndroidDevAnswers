<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThemesFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollViewAnswer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/padding"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvAnswer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Some text"
                android:textSize="@dimen/text_size_16sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="400dp" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollViewQuestions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_double"
            android:layout_marginStart="@dimen/margin_double"
            android:layout_marginEnd="@dimen/margin_double"
            android:gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/btnWhatIsSolid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Что такое SOLID?"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnWhatIsSingleResponsibilityPrinciple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Что такое принцип единственной ответсвенности?"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnWhatIsOpenClosedPrinciple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Что такое принцип открытости-закрытости?"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnWhatIsLiskovSubstitutionPrinciple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Что принцип подстановки Барбары Лисков?"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnWhatIsInterfaceSegregationPrinciple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Что принцип разделения интерфейса?"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnWhatIsDependencyInversionPrinciple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Что принцип инверсии зависимостей?"
                android:textAllCaps="false" />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>